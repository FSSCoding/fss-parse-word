#!/usr/bin/env python3
"""
Word - Global Document Conversion Tool
Safe, hash-validated bidirectional conversion between .docx and .md formats.

Global executable for system-wide installation.
"""

import sys
import os
from pathlib import Path

# Add the src directory to the Python path
SCRIPT_DIR = Path(__file__).parent.absolute()
SRC_DIR = SCRIPT_DIR.parent / "src"
sys.path.insert(0, str(SRC_DIR))

try:
    from word_converter import main
    if __name__ == '__main__':
        main()
except ImportError as e:
    print(f"‚ùå Error: Could not import word_converter module: {e}")
    print(f"üìÅ Expected location: {SRC_DIR / 'word_converter.py'}")
    sys.exit(1)
except Exception as e:
    print(f"‚ùå Unexpected error: {e}")
    sys.exit(1)